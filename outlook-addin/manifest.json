{
  "$schema": "https://developer.microsoft.com/json-schemas/office-js/add-in-manifest.schema.json",
  "id": "e4b1c9d0-1234-5678-9abc-def012345678",
  "version": "1.0.0",
  "manifestVersion": 2,
  "name": {
    "short": "Task Manager",
    "full": "Task Manager - Create Tasks from Emails"
  },
  "description": {
    "short": "Create tasks from emails",
    "full": "Create tasks directly from your Outlook emails with Task Manager integration"
  },
  "developer": {
    "name": "Digital Dream",
    "websiteUrl": "https://task-manager.digitaldream.work",
    "privacyUrl": "https://task-manager.digitaldream.work/privacy",
    "termsOfUseUrl": "https://task-manager.digitaldream.work/terms"
  },
  "icons": {
    "16": "https://task-manager.digitaldream.work/outlook/icon-16.png",
    "32": "https://task-manager.digitaldream.work/outlook/icon-32.png",
    "64": "https://task-manager.digitaldream.work/outlook/icon-64.png",
    "128": "https://task-manager.digitaldream.work/outlook/icon-128.png"
  },
  "authorization": {
    "permissions": {
      "resourceSpecific": [
        {
          "name": "MailboxItem.Read.User",
          "type": "Delegated"
        }
      ]
    }
  },
  "validDomains": [
    "task-manager.digitaldream.work"
  ],
  "extensions": [
    {
      "requirements": {
        "capabilities": [
          {
            "name": "Mailbox",
            "minVersion": "1.3"
          }
        ]
      },
      "runtimes": [
        {
          "requirements": {
            "capabilities": [
              {
                "name": "Mailbox",
                "minVersion": "1.3"
              }
            ]
          },
          "id": "TaskPane_Runtime",
          "type": "general",
          "code": {
            "page": "https://task-manager.digitaldream.work/outlook/taskpane.html"
          },
          "lifetime": "short",
          "actions": [
            {
              "id": "TaskPaneAction",
              "type": "openPage",
              "pinnable": false,
              "view": "TaskPane_View"
            }
          ]
        }
      ],
      "ribbons": [
        {
          "contexts": [
            "mailRead"
          ],
          "tabs": [
            {
              "builtInTabId": "TabDefault",
              "groups": [
                {
                  "id": "TaskManagerGroup",
                  "label": "Task Manager",
                  "icons": [
                    {
                      "size": 16,
                      "url": "https://task-manager.digitaldream.work/outlook/icon-16.png"
                    },
                    {
                      "size": 32,
                      "url": "https://task-manager.digitaldream.work/outlook/icon-32.png"
                    },
                    {
                      "size": 64,
                      "url": "https://task-manager.digitaldream.work/outlook/icon-64.png"
                    }
                  ],
                  "controls": [
                    {
                      "id": "CreateTaskButton",
                      "type": "button",
                      "label": "Create Task",
                      "icons": [
                        {
                          "size": 16,
                          "url": "https://task-manager.digitaldream.work/outlook/icon-16.png"
                        },
                        {
                          "size": 32,
                          "url": "https://task-manager.digitaldream.work/outlook/icon-32.png"
                        },
                        {
                          "size": 64,
                          "url": "https://task-manager.digitaldream.work/outlook/icon-64.png"
                        }
                      ],
                      "supertip": {
                        "title": "Create Task",
                        "description": "Create a task from this email in Task Manager"
                      },
                      "actionId": "TaskPaneAction"
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}

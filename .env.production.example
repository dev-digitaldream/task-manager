# === SERVEUR ===
NODE_ENV=production
PORT=3001
CLIENT_URL=https://task-manager.digitaldream.work

# Base de données (géré par Docker volume)
DATABASE_URL=file:/app/data/dev.db

# === SÉCURITÉ ===
# CORS - domaines autorisés séparés par des virgules
CORS_ORIGINS=https://task-manager.digitaldream.work,https://www.task-manager.digitaldream.work

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# === CLOUDINARY (Upload de fichiers) ===
# Obtenez vos credentials sur: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=votre_cloud_name
CLOUDINARY_API_KEY=votre_api_key
CLOUDINARY_API_SECRET=votre_api_secret

# === EMAIL (Notifications) ===
EMAIL_PROVIDER=dev
# dev = maildev (dev local), postmark, sendgrid, smtp

# Pour SMTP personnalisé
SMTP_HOST=smtp.example.com
SMTP_PORT=587

# Pour Postmark
POSTMARK_API_TOKEN=votre_token_postmark

# Pour SendGrid
SENDGRID_API_KEY=votre_api_key_sendgrid

# Email expéditeur
EMAIL_FROM=dev@digitaldream.work
